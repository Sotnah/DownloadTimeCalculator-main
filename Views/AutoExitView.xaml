<UserControl x:Class="DownloadTimeCalculator.Views.AutoExitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DownloadTimeCalculator.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Top Bar: Clock and Network Speed -->
        <Border Grid.Row="0"
                Background="{StaticResource DarkGray1Brush}"
                CornerRadius="6"
                Padding="15,10"
                Margin="0,0,0,20"
                BorderBrush="{StaticResource DarkGray3Brush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="LblCurrentTime"
                           Grid.Column="0"
                           Text="{Binding AutoExitViewModel.CurrentTime}"
                            FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource NeonGreenBrush}"
                           VerticalAlignment="Center"
                           ToolTip="Current time">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource NeonGreen}"
                                          BlurRadius="10"
                                          ShadowDepth="0"
                                          Opacity="0.4" />
                    </TextBlock.Effect>
                </TextBlock>
                
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" ToolTip="Current download speed" Background="Transparent">
                        <TextBlock Text="↓ "
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource NeonGreenBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource NeonGreen}"
                                                  BlurRadius="10"
                                                  ShadowDepth="0"
                                                  Opacity="0.4" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="LblDownloadSpeed"
                                   Text="{Binding AutoExitViewModel.DownloadSpeed}"
                                   FontSize="14"
                                   Foreground="{StaticResource LightGrayBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" ToolTip="Current upload speed" Background="Transparent">
                        <TextBlock Text="↑ "
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource NeonGreenBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource NeonGreen}"
                                                  BlurRadius="10"
                                                  ShadowDepth="0"
                                                  Opacity="0.4" />
                            </TextBlock.Effect>
                        </TextBlock>
                    <TextBlock x:Name="LblUploadSpeed"
                               Text="{Binding AutoExitViewModel.UploadSpeed}"
                               FontSize="14"
                               Foreground="{StaticResource LightGrayBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            </Grid>
        </Border>
        
        <!-- Auto Exit Toggle -->
        <Border Grid.Row="1"
                Background="{StaticResource DarkGray1Brush}"
                CornerRadius="6"
                Padding="20"
                BorderBrush="{StaticResource DarkGray3Brush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="[AUTO_EXIT_CONFIG]"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           Foreground="{StaticResource LightGrayBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource LightGray}"
                                          BlurRadius="15"
                                          ShadowDepth="0"
                                          Opacity="0.4" />
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Action -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Width="100" VerticalAlignment="Center">
                        <TextBlock Text="Action:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <Path Data="{StaticResource InfoIcon}" 
                              Fill="{StaticResource MediumGrayBrush}" 
                              Width="12" Height="12" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              ToolTip="Choose the action to perform (e.g., Shutdown, Sleep)."/>
                    </StackPanel>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Source={x:Static vm:AutoExitViewModel.PowerActions}}"
                              SelectedItem="{Binding AutoExitViewModel.SelectedPowerAction}"/>
                </Grid>

                <!-- Network Adapter -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Width="100" VerticalAlignment="Center">
                        <TextBlock Text="Adapter:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <Path Data="{StaticResource InfoIcon}" 
                              Fill="{StaticResource MediumGrayBrush}" 
                              Width="12" Height="12" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              ToolTip="Select the network interface to monitor."/>
                    </StackPanel>
                    
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AutoExitViewModel.NetworkAdapters}"
                              SelectedItem="{Binding AutoExitViewModel.SelectedNetworkAdapter}"/>
                </Grid>

                <!-- Speed Threshold -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Width="100" VerticalAlignment="Center">
                        <TextBlock Text="Threshold:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <Path Data="{StaticResource InfoIcon}" 
                              Fill="{StaticResource MediumGrayBrush}" 
                              Width="12" Height="12" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              ToolTip="Action triggers when speed drops below this limit."/>
                    </StackPanel>
                    
                    <TextBox Grid.Column="1"
                             Text="{Binding AutoExitViewModel.ThresholdValue, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                             Margin="0,0,5,0"
                             Tag="eg. 100"
                             Validation.ErrorTemplate="{x:Null}"
                             VerticalContentAlignment="Center"
                             PreviewTextInput="NumberValidationTextBox">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AutoExitViewModel.IsThresholdError}" Value="True">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox Grid.Column="2"
                              SelectedIndex="{Binding AutoExitViewModel.ThresholdUnitIndex}"
                              Width="70">
                        <ComboBoxItem Content="KB/s" />
                        <ComboBoxItem Content="MB/s" />
                    </ComboBox>
                </Grid>

                <!-- Duration -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Width="100" VerticalAlignment="Center">
                        <TextBlock Text="Duration:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <Path Data="{StaticResource InfoIcon}" 
                              Fill="{StaticResource MediumGrayBrush}" 
                              Width="12" Height="12" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              ToolTip="Low speed must persist for this duration."/>
                    </StackPanel>
                    
                    <TextBox Grid.Column="1"
                             Text="{Binding AutoExitViewModel.DurationSeconds, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                             Margin="0,0,5,0"
                             Tag="eg. 60"
                             Validation.ErrorTemplate="{x:Null}"
                             VerticalContentAlignment="Center"
                             PreviewTextInput="NumberValidationTextBox">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AutoExitViewModel.IsDurationError}" Value="True">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Grid.Column="2" 
                               Text="seconds" 
                               Foreground="{StaticResource LightGrayBrush}" 
                               VerticalAlignment="Center" />
                </Grid>
                
                <Separator Background="{StaticResource DarkGray3Brush}" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Enable Auto Exit"
                                   FontSize="14"
                                   Foreground="{StaticResource WhiteBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                         <Path Data="{StaticResource InfoIcon}" 
                              Fill="{StaticResource MediumGrayBrush}" 
                              Width="14" Height="14" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              ToolTip="Turn on/off the automatic action feature."/>
                    </StackPanel>
                    
                    <ToggleButton x:Name="ToggleAutoExit"
                                  Grid.Column="1"
                                  Width="60"
                                  Height="30"
                                  IsChecked="{Binding AutoExitViewModel.IsAutoExitEnabled}"
                                  Style="{StaticResource AutoExitToggleButtonStyle}">
                    </ToggleButton>
                </Grid>
                
                <!-- Status Display - Layered for Cross-Fade -->
                <Grid Margin="0,15,0,0" MinHeight="25">
                    
                    <!-- LAYER 1: Waiting for input (Centered & Stable) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                         <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Opacity" Value="0"/> <!-- Default Hidden -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AutoExitViewModel.IsWaitingForInput}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <!-- Invisible Spacer to balance the dots on the right -->
                        <TextBlock Text="..." FontSize="16" FontWeight="Bold" Visibility="Hidden" Width="25"/>
                        
                        <TextBlock Text="Waiting for input"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource LightGrayBrush}">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource LightGray}" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- Actual Dots -->
                        <TextBlock Text="{Binding AutoExitViewModel.StatusSuffix}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource LightGrayBrush}"
                                   Width="25">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource LightGray}" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- LAYER 2: Active Text (Shutdown in...) -->
                    <TextBlock Text="{Binding AutoExitViewModel.StatusBase}"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <!-- Default Hidden -->
                                <Setter Property="Opacity" Value="0"/>
                                <!-- Color State Styles (Moved here from inside Triggers) -->
                                <Setter Property="Foreground" Value="{StaticResource LightGrayBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource LightGray}" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <!-- Show when NOT waiting -->
                                    <DataTrigger Binding="{Binding AutoExitViewModel.IsWaitingForInput}" Value="False">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                    
                                    <!-- Green Active State -->
                                    <DataTrigger Binding="{Binding AutoExitViewModel.IsActionActive}" Value="True">
                                         <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#00FF41" Duration="0:0:0.5"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Color)" To="#00FF41" Duration="0:0:0.5"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.BlurRadius)" To="15" Duration="0:0:0.5"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)" To="0.6" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#CCCCCC" Duration="0:0:0.5"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Color)" To="#CCCCCC" Duration="0:0:0.5"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.BlurRadius)" To="5" Duration="0:0:0.5"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)" To="0.2" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

