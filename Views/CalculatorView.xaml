<UserControl x:Class="DownloadTimeCalculator.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="> DOWNLOAD_CALC"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,30"
                   Foreground="{StaticResource NeonGreenBrush}"
                   HorizontalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="{StaticResource NeonGreen}"
                                  BlurRadius="15"
                                  ShadowDepth="0"
                                  Opacity="0.4" />
            </TextBlock.Effect>
        </TextBlock>
        <Border Grid.Row="1"
                Background="{StaticResource DarkGray1Brush}"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,20"
                BorderBrush="{StaticResource DarkGray3Brush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="[FILE_SIZE]"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"
                           Foreground="{StaticResource LightGrayBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource LightGray}"
                                          BlurRadius="15"
                                          ShadowDepth="0"
                                          Opacity="0.4" />
                    </TextBlock.Effect>
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtFileSize"
                             Text="{Binding CalculatorViewModel.FileSizeText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,10,0"
                             Tag="eg. 50" />
                    <ComboBox x:Name="ComboSizeUnit"
                              SelectedIndex="{Binding CalculatorViewModel.SizeUnitIndex}"
                              MinWidth="100"
                              Grid.Column="1">
                        <ComboBoxItem Content="Bytes" />
                        <ComboBoxItem Content="KB" />
                        <ComboBoxItem Content="MB" />
                        <ComboBoxItem Content="GB" />
                        <ComboBoxItem Content="TB" />
                    </ComboBox>
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Row="2"
                Background="{StaticResource DarkGray1Brush}"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,25"
                BorderBrush="{StaticResource DarkGray3Brush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="[NET_SPEED]"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"
                           Foreground="{StaticResource LightGrayBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource LightGray}"
                                          BlurRadius="15"
                                          ShadowDepth="0"
                                          Opacity="0.4" />
                    </TextBlock.Effect>
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtSpeed"
                             Text="{Binding CalculatorViewModel.SpeedText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,10,0"
                             Tag="eg. 100" />
                    <ComboBox x:Name="ComboSpeedUnit"
                              SelectedIndex="{Binding CalculatorViewModel.SpeedUnitIndex}"
                              MinWidth="100"
                              Grid.Column="1">
                        <ComboBoxItem Content="bps" />
                        <ComboBoxItem Content="Kbps" />
                        <ComboBoxItem Content="Mbps" />
                        <ComboBoxItem Content="Gbps" />
                        <ComboBoxItem Content="MB/s" />
                    </ComboBox>
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Row="3"
                Background="{StaticResource DarkGray1Brush}"
                CornerRadius="6"
                Padding="20"
                BorderBrush="{StaticResource DarkGray3Brush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="// ESTIMATED_TIME"
                           Foreground="{StaticResource WhiteBrush}"
                           Opacity="0.7"
                           FontSize="14"
                           Margin="0,0,0,5"
                           HorizontalAlignment="Center" />
                <TextBlock x:Name="LblResult"
                           Text="{Binding CalculatorViewModel.Result}"
                           FontSize="34"
                           FontWeight="Bold"
                           Foreground="{StaticResource WhiteBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,10" />
                <Border Background="#40000000"
                        CornerRadius="4"
                        Padding="15,5"
                        HorizontalAlignment="Center"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1">
                    <TextBlock x:Name="LblETA"
                               Text="{Binding CalculatorViewModel.ETA}"
                               FontSize="16"
                               Foreground="{StaticResource BlueLightBrush}"
                               FontWeight="Bold" />
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

