<?xml version="1.0" encoding="UTF-8" ?>
<Window x:Class="DownloadTimeCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DownloadTimeCalculator.Views"
        mc:Ignorable="d"
        Title="Download Time Calculator"
        Height="550"
        Width="420"
        Foreground="White"
        FontFamily="Consolas"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource BlackBrush}"
        MouseDown="Window_MouseDown">
    <Grid>
        <!-- Window Control Buttons -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnMinimize"
                        Content="─"
                        Width="30"
                        Height="30"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="{StaticResource LightGrayBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnMinimize_Click"
                        Margin="0,0,5,0"
                        Style="{StaticResource WindowControlButtonStyle}">
                </Button>
                <Button x:Name="BtnClose"
                        Content="✕"
                        Width="30"
                        Height="30"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="{StaticResource LightGrayBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnClose_Click"
                        Style="{StaticResource CloseButtonStyle}">
                </Button>
            </StackPanel>
        </Grid>
        
        <TabControl x:Name="MainTabControl" 
                    Margin="25,25,25,25"
                    Background="Transparent"
                    BorderThickness="0">
            <!-- Calculator Tab -->
            <TabItem Header="Calculator">
                <views:CalculatorView />
            </TabItem>
            
            <!-- Auto Exit Tab -->
            <TabItem Header="Auto Exit">
                <views:AutoExitView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
